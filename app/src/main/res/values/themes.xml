<resources>
    <!-- Base application theme. -->
    <style name="Theme.CountersNormal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/gray</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="android:textColorTertiary">@color/light_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close</item>
    </style>

    <style name="Theme.Counters" parent="Theme.CountersNormal">
        <item name="android:windowBackground">@color/welcome_background</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/orange</item>
    </style>

    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/gray</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialogButton</item>
    </style>

    <style name="AlertDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubTitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="SubTitleRegular">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Description">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Content">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>